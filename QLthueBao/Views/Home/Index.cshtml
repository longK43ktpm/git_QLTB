@model QLthueBao.Models.ViewModel.HomePageViewModel
@{
    ViewBag.Title = "Home Page";
}

<section class="slider_section" style="margin-bottom: 40px">
    <div id="myCarousel" class="carousel slide banner-main" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="first-slide" src="~/Content/img/asp_banner.jpg" alt="First slide">
                <div class="container">
                    <div class="carousel-caption relative">
                        <h5 style="font-size:25px; color:red; font-weight:700">
                            Giảm 30% tất cả gói cước
                            <br />cho đối tượng khách hàng
                            <br />mới lập tài khoản
                        </h5>
                        <a class="buynow" style="margin-top:80px" href="#">Xem Chi Tiết</a>
                    </div>
                </div>
            </div>
            @foreach (var km in Model.DSKhuyenMai)
            {
                <div class="carousel-item">
                    <img class="second-slide" src="@Url.Content(km.Image)" alt="">
                    <div class="container">
                        <div class="carousel-caption relative">
                            <span>@km.Name</span>
                            <p>
                                @km.Mo_ta
                            </p>
                            <a class="buynow" href="#">Xem Chi Tiết</a>

                        </div>
                    </div>
                </div>
            }

        </div>
        <a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev">
            <i class='fa fa-angle-left'></i>
        </a>
        <a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next">
            <i class='fa fa-angle-right'></i>
        </a>
    </div>
</section>

<!-- Testimonial Start -->
<div class="container-fluid py-5">
    <div class="container p-0">
        <div class="text-center pb-4">
            <p class="section-title px-5" style="font-size:27px"><span class="px-2">Gói Cước Được Mua Nhiều Nhất</span></p>
        </div>

        <div class="owl-carousel testimonial-carousel">
            @for (int i = 0; i < 5 && i < @Model.DSCuocGiamDan.Count(); i++)
            {
                <div class="testimonial-item px-3">
                    <div class="col-lg-12 mb-4">
                        <div class="card border-0 shadow-sm mb-2">
                            <img class="card-img-top mb-2" src="~/Content/img/blog-1.jpg" alt="">
                            <div class="card-body bg-light text-center p-0">
                                <h4 class="">@Model.DSCuocGiamDan.ElementAt(i).Name</h4>
                                <div class="d-flex justify-content-center mb-3">
                                    <small class="mr-2"><i class="fa fa-rss text-primary"></i> @Model.DSCuocGiamDan.ElementAt(i).Luu_luong GB </small>
                                    <small class="mr-2"><i class="fa fa-rss-square text-primary"></i> @Model.DSCuocGiamDan.ElementAt(i).Thoi_han_d_ Ngày </small>
                                    <small class="mr-2"><i class="fa fa-shopping-cart text-primary"></i> Lượt mua: @Model.DSCuocGiamDan.ElementAt(i).Luot_mua</small>
                                </div>
                                <h6><i class="fa fa-tags text-primary"></i>Giá: @Model.DSCuocGiamDan.ElementAt(i).Gia đ </h6>
                                <a href="" class="btn btn-primary px-4 mx-auto my-2">Đăng ký</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<!-- Testimonial End -->
