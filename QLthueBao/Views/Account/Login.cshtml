@model QLthueBao.Models.ViewModel.LoginViewModel

@{
    ViewBag.Title = "Login";
}

<div class="login-wrap">
    <div class="login-html">
        <input id="tab-1" type="radio" name="tab" class="sign-in" checked><label for="tab-1" class="tab">Sign In</label>
        <input id="tab-2" type="radio" name="tab" class="sign-up"><label for="tab-2" class="tab">Sign Up</label>
        <div class="login-form">
            <form method="post" action="@Url.Action("login", "account")">
                <div class="sign-in-htm">
                    <div class="group">
                        <label for="user" class="label">Username</label>
                        <input name="UserName" placeholder="Account" id="user" type="text" class="input">
                    </div>
                    <div class="group">
                        <label for="pass" class="label">Password</label>
                        <input name="PassWord" placeholder="Password" id="pass" type="password" class="input" data-type="password">
                    </div>
                    @*<div class="group">
                        <input id="check" type="checkbox" class="check" checked>
                        <label for="check"><span class="icon"></span> Keep me Signed in</label>
                    </div>*@
                    <div class="group">
                        <input type="submit" class="button" value="Sign In">
                    </div>
                    <div class="hr"></div>
                    <a class="forgot" href="#">Forgot Your Password?</a>
                </div>
            </form>
            <form method="post" action="@Url.Action("signup", "account")">
                <div class="sign-up-htm">
                    <div class="group">
                        <label for="user" class="label">Username</label>
                        <input id="user" type="text" class="input" name="UserName">
                    </div>
                    <div class="group">
                        <label for="pass" class="label">Password</label>
                        <input id="pass" type="password" class="input" data-type="password" name="Password">
                    </div>
                    <div class="group">
                        <label for="pass" class="label">Số Điện Thoại</label>
                        <input id="pass" type="text" class="input" name="Sdt">
                    </div>

                    <div class="col">
                        <label for="pass" class="label">Nhà Mạng</label>
                        <select class="form-select" name="TenNhaMang" style="margin-left:10px; margin-bottom:50px">
                            @foreach (var nm in Model.NhaMang)
                            {
                                <option>@nm.Name</option>
                            }
                        </select>
                    </div>
                    <div class="group">
                        <input type="submit" class="button" value="Sign Up">
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
